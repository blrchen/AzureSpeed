@{
    ViewBag.Title = "Azure Storage Large File Upload Speed Test";
}

<div class="container-fluid" ng-controller="UploadLargeFileController">
    <div class="page-header">
        <h3>@ViewBag.Title</h3>
        <small>Test upload large file to Azure Blob Storage in worldwide data centers, with different upload options.</small>
    </div>
    <div class="row">
        <div class="col-md-12">

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    File Upload Speed Test
                </div>
                <div class="panel-body">
                    <p>
                        <a href="#" class="btn btn-success" data-toggle="modal" data-target="#upload-modal">Start testing</a>
                    </p>
                    <p>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>File Name</th>
                                    <th>File Size</th>
                                    <th>Region</th>
                                    <th>Block Size(kb)</th>
                                    <th>Thread</th>
                                    <th>Upload Speed</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="result in results">
                                    <td>{{result.fileName}}</td>
                                    <td>{{result.fileSize}}</td>
                                    <td>{{result.region}}</td>
                                    <td>{{result.blockSize}}</td>
                                    <td>{{result.thread}}</td>
                                    <td>{{result.speed}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </p>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("UploadFileModal")
</div>