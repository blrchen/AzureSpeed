{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string",
      "metadata": {
        "description": "The name of the web app that you wish to create."
      }
    },
    "servicePackageLink": {
      "type": "string",
      "metadata": {
        "description": "The URL for the GitHub repository that contains the project to deploy."
      }
    },
    "appServicePlanName": {
      "type": "string",
      "metadata": {
        "description": "The name of the App Service plan to use for hosting the web app."
      }
    },
    "subscriptionId": {
      "type": "string",
      "metadata": {
        "description": "Subscription Id."
      }
    },
  },
  "resources": [
    {
      "apiVersion": "2015-08-01",
      "name": "[concat(parameters('siteName'), '/staging')]",
      "type": "Microsoft.Web/sites/slots",
      "location": "[resourceGroup().location]",
      "properties": {
        "name": "[concat(parameters('siteName'), '(staging)')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "siteConfig": {
          "AlwaysOn": true
        }
      },
      "resources": [
        {
          "apiVersion": "2014-06-01",
          "name": "MSDeploy",
          "type": "Extensions",
          "properties": {
            "packageUri": "[parameters('servicePackageLink')]"
          },
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('siteName'), '/slots/staging')]"
          ]
        },
        {
          "apiVersion": "2015-08-01",
          "name": "[concat(parameters('siteName'),'/slotConfigNames')]",
          "type": "Microsoft.Web/sites/config",
          "properties": {
            "appSettingNames": ["serverHostUrl"]
          },
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('siteName'), '/slots/staging')]"
          ]
        },
        {
          "name": "appsettings",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('siteName'), '/slots/staging')]",
            "[concat('Microsoft.Web/sites/', parameters('siteName'), '/slots/staging//Extensions/MSDeploy')]"
          ],
          "properties": {
            "foo": "bar",
          }
        }
      ]
    }
  ]
}